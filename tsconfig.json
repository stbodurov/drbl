{
	"include": [
		"src/**/*",
		"react-app-env.d.ts"
	],
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"jsx": "react-jsx",
		"plugins": [
			{
				"name": "typescript-plugin-css-modules"
			}
		],
		"moduleResolution": "node",
		"esModuleInterop": true,
		"strict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"strictBindCallApply": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true
	}
}